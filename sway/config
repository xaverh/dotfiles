focus_follows_mouse yes
mouse_warping output

    # Make the current focus fullscreen
    bindsym Mod4+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym Mod4+Shift+space floating toggle

    # Move focus to the parent container
    bindsym Mod4+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym Mod4+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym Mod4+minus scratchpad show
#
# Resizing containers:
#
mode "resize üçÜ" {

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Mod4+r mode "resize üçÜ"


bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    # status_command $XDG_CONFIG_HOME/sway/stabilisator_bak
    status_command $XDG_CONFIG_HOME/sway/barista/simple
    # status_command swaymsg -t subscribe -m \'\[\"window\"\]\' | jq -r .container.name
    swaybar_command swaybar
    font IBM Plex Sans Condensed SemiBold 9
    colors {
        statusline $color_w
        background #171717f3
        binding_mode #e1e1e1 #ffff00 #171717
        inactive_workspace #171717 #171717 #e5e6e6
    }
}

