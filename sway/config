bindsym Mod4+i exec clipman pick -t bemenu -T'-p üìã' --histpath="$XDG_RUNTIME_DIR/clipman-primary.json"
bindsym Mod4+Shift+i exec clipman clear -t bemenu -T'-p üöÆ' --histpath="$XDG_RUNTIME_DIR/clipman-primary.json"
bindsym Mod4+e exec cat ~/.config/awesome/emoji.txt | bemenu -i -l 10 -p '¬Ø\_(„ÉÑ)_/¬Ø' | awk '{printf $1}' | wl-copy

bindsym Print grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') ~/tmp/screenshot_`date --rfc-3339=ns`.png
bindsym Mod4+Print grim -g `slurp` ~/tmp/screenshot_`date --rfc-3339=ns`.png | wl-copy
bindsym Shift+Print grim ~/tmp/screenshot_`date --rfc-3339=ns`.png

set $mode_launcher Launch:<span background='#e66000' foreground='#e5e6e6'> <u>F</u>irefox </span><span background='#0066b8' foreground='#e5e6e6'> Visual Studio <u>C</u>ode </span>
bindsym Mod4+o mode "$mode_launcher"
mode --pango_markup "$mode_launcher" {
    bindsym f exec firefox; mode "default"
    bindsym c exec code -n; mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym XF86AudioRaiseVolume exec pamixer --get-mute && pamixer -u || pamixer -i 2 && echo `pamixer --get-volume` \"#dd${QOLOR_K:1}\" \"#dd${QOLOR_X:1}\" \"#dd${QOLOR_w:1}\" > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec pamixer --get-mute && pamixer -u || pamixer -d 2 && echo `pamixer --get-volume` \"#dd${QOLOR_K:1}\" \"#dd${QOLOR_Q:1}\" \"#dd${QOLOR_w:1}\" > $SWAYSOCK.wob
bindsym XF86AudioMute exec pamixer -m && pamixer --get-mute && echo 0 \"#dd${QOLOR_R:1}\" \"#dd${QOLOR_K:1}\" \"#dd${QOLOR_w:1}\" > $SWAYSOCK.wob

